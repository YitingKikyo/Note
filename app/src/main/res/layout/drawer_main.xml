<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_gravity="start"
              android:orientation="vertical"
              android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_file_list_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/file_img"
            android:layout_width="@dimen/drawer_file_list_img"
            android:layout_height="@dimen/drawer_file_list_img"
            android:src="@drawable/folder"
            android:tint="#757575"
            android:layout_marginStart="12dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/file_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:text="全部便签"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/file_num"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="14sp"
            android:textColor="#757575"
            android:gravity="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_layout_recycler_view"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_file_list_height">
        <ImageView
            android:layout_width="@dimen/drawer_file_list_img"
            android:layout_height="@dimen/drawer_file_list_img"
            android:src="@drawable/add"
            android:tint="#757575"
            android:layout_marginStart="12dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:text="新建..."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_file_list_height">
        <ImageView
            android:layout_width="@dimen/drawer_file_list_img"
            android:layout_height="@dimen/drawer_file_list_img"
            android:src="@drawable/settings"
            android:tint="#757575"
            android:layout_marginStart="12dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:text="设置"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>